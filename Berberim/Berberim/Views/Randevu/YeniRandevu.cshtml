@model Berberim.Models.RandevuModel

@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewData["Title"] = "Yeni Randevu";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-6">
            <div class="card shadow-lg" style="background-color: rgba(59, 5, 19, 0.9); color: #f8f9fa; border-radius: 10px;">
                <div class="card-body">
                    <h2 class="text-center mb-4" style="font-weight: bold; color: #ffc107;">Yeni Randevu</h2>

                    <form asp-action="YeniRandevu" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Ad Soyad -->
                        <div class="form-group mb-3">
                            <label for="adSoyad" class="form-label">Ad Soyad</label>
                            <input asp-for="adSoyad" class="form-control" placeholder="Adınızı ve soyadınızı giriniz" style="background-color: #333; color: #fff; border: none;" />
                            <span asp-validation-for="adSoyad" class="text-danger"></span>
                        </div>

                        <!-- Hizmet Seçiniz -->
                        <div class="form-group mb-3">
                            <label for="service" class="form-label">Hizmet Seçiniz</label>
                            <select asp-for="service" class="form-control" id="ucretgoster" style="background-color: #333; color: #fff; border: none;">
                                <option value="" data-price="0">Hizmet Seçin</option>
                                @foreach (var service in ViewBag.Services as List<Berberim.Entities.Hizmet>)
                                {
                                    <option value="@service.hizmetID" data-price="@service.hizmetPrice">@service.hizmetName</option>
                                }
                            </select>
                            <span asp-validation-for="service" class="text-danger"></span>
                        </div>

                        <!-- Hizmet Fiyatı -->
                        <div class="form-group">
                            <label>Hizmet Fiyatı:</label>
                            <p id="servicePriceDisplay">Seçtiğiniz hizmetin fiyatı burada görünecek.</p>
                        </div>

                        <!-- Personel Seçiniz -->
                        <div class="form-group mb-3">
                            <label for="personnel" class="form-label">Personel Seçiniz</label>
                            <select asp-for="personnel" class="form-control" style="background-color: #333; color: #fff; border: none;">
                                <option value="">Personel Seçin</option>
                                @foreach (var personel in ViewBag.Personels as List<Berberim.Entities.Personel>)
                                {
                                    <option value="@personel.personelID">@personel.personelName</option>
                                }
                            </select>
                            <span asp-validation-for="personnel" class="text-danger"></span>
                        </div>

                        <!-- Tarih -->
                        <div class="form-group mb-3">
                            <label for="date" class="form-label">Tarih</label>
                            <input asp-for="date" type="date" class="form-control" style="background-color: #333; color: #fff; border: none;" />
                            <span asp-validation-for="date" class="text-danger"></span>
                        </div>

                        <!-- Saat -->
                        <div class="form-group mb-3">
                            <label for="saat" class="form-label">Saat</label>
                            <input asp-for="saat" type="time" class="form-control" style="background-color: #333; color: #fff; border: none;" />
                            <span asp-validation-for="saat" class="text-danger"></span>
                        </div>

                        <!-- Telefon Numarası -->
                        <div class="form-group mb-3">
                            <label for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon numaranızı giriniz" style="background-color: #333; color: #fff; border: none;" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Notlar -->
                        <div class="form-group mb-3">
                            <label for="Notes" class="form-label">Notlar</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Eklemek istediğiniz bir not var mı?" style="background-color: #333; color: #fff; border: none;"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <!-- Buton -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-warning text-dark fw-bold px-4 py-2">Randevu Al</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   
    <script>
        document.getElementById('ucretgoster').addEventListener('change', function () {
            // Seçilen option
            var selectedOption = this.options[this.selectedIndex];
            // Fiyat bilgisi
            var price = selectedOption.getAttribute('data-price');
            // Fiyat alanını güncelle
            var priceDisplay = document.getElementById('servicePriceDisplay');
            if (price && price > 0) {
                priceDisplay.textContent = `Seçtiğiniz hizmetin fiyatı: ${price} TL`;
            } else {
                priceDisplay.textContent = "Seçtiğiniz hizmetin fiyatı burada görünecek.";
            }
        });
    </script>
}
