<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Berberim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Genel Sayfa Arkaplanı */
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: url('/images/berberimfoto.png') no-repeat center center/cover;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        .navbar {
            background-color: rgba(59, 5, 19, 0.6);
        }

        .navbar-brand, .nav-link {
            color: #f8f9fa !important;
            font-weight: bold;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        /* Sayfa İçeriği */
        .content-container {
            flex: 1;
            padding: 50px 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #f8f9fa;
        }

        /* Footer */
        .footer {
            background-color: rgba(59, 5, 19, 0.6);
            color: #f8f9fa;
            text-align: center;
            padding: 15px 0;
        }

            .footer a {
                color: #ffc107;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">Berberim</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimizda">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hizmetler">Hizmetler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/İletisim">İletişim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Randevu/YeniRandevu">Randevu Al</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Giris/Index">Giris Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa İçeriği -->
    <div class="content-container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Berberim | Tüm Hakları Saklıdır.</p>
            <p>
                <a href="/Privacy">Gizlilik Politikası</a> |
                <a href="/Home/İletisim">İletişim</a>
            </p>
        </div>
    </footer>

    <!-- Scripts Section -->
    @RenderSection("Scripts", required: false)

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
