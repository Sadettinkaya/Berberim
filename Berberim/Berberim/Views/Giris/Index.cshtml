@model Berberim.Models.GirisYapModel
@{
    Layout = "_GirisKayitLayout";
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>
<form asp-action="Index" method="post">
    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="sifre" class="form-label">Şifre</label>
        <input asp-for="sifre" class="form-control" type="password" placeholder="Şifrenizi giriniz" />
        <span asp-validation-for="sifre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>

<div class="footer">
    Hesabınız yok mu? <a href="/Login/KayitOl">Kaydolun</a>
</div>
