@model Berberim.Models.GirisYapModel
@{
    Layout = null; /* Layout dosyasını kullanma */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Sayfa Arkaplanı */
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background: url('/images/giris.jpeg') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }

        /* Giriş Kutusu */
        .login-container {
            background: rgba(15, 0, 0, 0.8);
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(15, 2, 1, 0.5);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            color: #f8f9fa;
            text-align: center;
        }

            .login-container h2 {
                font-size: 1.8rem;
                margin-bottom: 20px;
                font-weight: bold;
            }

        .form-control {
            background-color: #333;
            color: #fff;
            border: none;
            border-radius: 6px;
        }

            .form-control:focus {
                background-color: #444;
                border: 1px solid #555;
                box-shadow: none;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            width: 100%;
            padding: 10px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .footer {
            margin-top: 10px;
            font-size: 0.9rem;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Giriş Yap</h2>
        <form asp-action="Index" method="post">
            <!-- E-posta -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Şifre -->
            <div class="form-group mb-3">
                <label asp-for="sifre" class="form-label">Şifre</label>
                <input asp-for="sifre" class="form-control" type="password" placeholder="Şifrenizi giriniz" />
                <span asp-validation-for="sifre" class="text-danger"></span>
            </div>

            <!-- Giriş Yap Butonu -->
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
        <div class="footer">
            Hesabınız yok mu? <a href="/Login/KayitOl">Kaydolun</a>
        </div>
    </div>
</body>
</html>
