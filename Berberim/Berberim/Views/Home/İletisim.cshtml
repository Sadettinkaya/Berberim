@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewData["Title"] = "İletişim";
}

<div class="container my-5">
    <!-- Başlık ve Açıklama -->
    <h2 class="text-center text-warning fw-bold mb-4">Bize Ulaşın</h2>
    <p class="text-center text-light mb-5">
        Her türlü soru, öneri veya randevu için aşağıdaki iletişim bilgilerimizden bize ulaşabilirsiniz.
    </p>

    <!-- İletişim Bilgileri -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-4 mb-4">
            <div class="card bg-dark text-light shadow-lg border-0">
                <div class="card-body text-center">
                    <h4 class="text-warning fw-bold mb-3">📞 Telefon</h4>
                    <p class="fs-5">
                        <a href="tel:+905551234567" class="text-decoration-none text-light">0 (555) 123 45 67</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-dark text-light shadow-lg border-0">
                <div class="card-body text-center">
                    <h4 class="text-warning fw-bold mb-3">📧 E-posta</h4>
                    <p class="fs-5">
                        <a href="mailto:info@berberim.com" class="text-decoration-none text-light">info@berberim.com</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-dark text-light shadow-lg border-0">
                <div class="card-body text-center">
                    <h4 class="text-warning fw-bold mb-3">📍 Adres</h4>
                    <p class="fs-6">Fethiye, Çarşı Mahallesi, 123. Sokak No: 4</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Harita -->
    <!-- Google Maps Embed -->
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h4 class="text-warning text-center mb-3 fw-bold">Salonumuzun Konumu</h4>
            <iframe class="rounded shadow-lg"
                    width="100%"
                    height="400"
                    style="border:0;"
                    loading="lazy"
                    allowfullscreen
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d25613.792123408713!2d29.12104142548991!3d36.62107639513517!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c0023c5b5a6f15%3A0x2f4e537c998c9c48!2s%C3%87ar%C5%9F%C4%B1%2C%20Fethiye%2C%20Mu%C4%9Fla!5e0!3m2!1sen!2str!4v1700000000000">
            </iframe>
        </div>
    </div>

</div>

<!-- Stil -->
<style>
    body {
        color: #f8f9fa;
    }

    .card {
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.5);
        }

    a {
        color: #ffc107;
    }

        a:hover {
            text-decoration: underline;
            color: #ffca28;
        }
</style>
