@using System.Text.Json
@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewData["Title"] = "Yapay Zeka Saç Modeli Önerisi";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="display-5">Yapay Zeka Saç Modeli Önerisi</h1>
        <p class="text-muted">Fotoğraf yükleyin ve yapay zeka önerisiyle saç stilinizi keşfedin.</p>
    </div>

    <!-- Fotoğraf Yükleme Formu -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Fotoğraf Yükle</h5>
            <form asp-action="YapayZekaOneri" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="photo" class="form-label">Fotoğraf Yükle:</label>
                    <input type="file" name="photo" id="photo" class="form-control" accept="image/*" required />
                </div>
                <button type="submit" class="btn btn-primary">Öneri Al</button>
            </form>
        </div>
    </div>

    <!-- Yapay Zeka Önerisi Bölümü -->
    @if (ViewBag.EditedImageUrl != null)
    {
        <div class="alert alert-success text-center">
            <h5>Saç Stili ve Rengi İçin Yapay Zeka Önerisi:</h5>
            <p>@ViewBag.EditedImageUrl</p>
        </div>
    }
    else if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            <p>@ViewBag.Error</p>
        </div>
    }
</div>
