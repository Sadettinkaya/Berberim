@using Berberim.Entities
@model IEnumerable<Randevu>

@{
	ViewData["Title"] = "RandevuListesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4" style="font-size: 2.5rem; color: #007bff;">Randevu Listesi</h2>

<table class="table table-striped table-hover shadow-sm" style="font-size: 1rem; background-color: #f8f9fa; border-radius: 10px;">
	<thead class="table-primary">
		<tr>
			<th>Randevu Id</th>
			<th>Müşteri Adı Soyadı</th>
			<th>Müşteri Telefon</th>
			<th>Personel Adı Soyadı</th>
			<th>İşlem</th>
			<th>Randevu Tarihi</th>
			<th>Randevu Saati</th>
			<th>Onay Durumu</th>
			<th>Onayla</th>
			<th>Güncelle</th>
			<th>İptal Et</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var r in Model)
		{
			<tr>
				<td>@r.randevuID</td>
				<td>@r.MusteriName</td>
				<td>@r.tel</td>
				<td>@r.personel?.personelName</td>
				<td>@r.hizmetName</td>
				<td>@r.randevuTarih</td>
				<td>@r.randevuSaat</td>

				<td>@(r.onaylandimi ? "Onaylandı" : "Beklemede")</td>
				<td>
					@if (!r.onaylandimi)
					{
						<form method="post" action="/Admin/Randevu/Onayla">
							<input type="hidden" name="id" value="@r.randevuID" />
							<button type="submit" class="btn btn-success btn-sm" style="font-weight: bold; color: white;">Onayla</button>
						</form>
					}
				</td>

				<td>
					<a href="/Admin/Randevu/UpdateAppoint/@r.randevuID" class="btn btn-warning btn-sm" style="font-weight: bold; color: white;">Güncelle</a>
				</td>
				<td>
					<a href="/Admin/Randevu/DeleteAppoint/@r.randevuID" class="btn btn-danger btn-sm" style="font-weight: bold; color: white;">İptal</a>
				</td>
			</tr>
		}
	</tbody>
</table>
