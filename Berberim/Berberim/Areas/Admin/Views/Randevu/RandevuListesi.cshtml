@using Berberim.Entities
@model IEnumerable<Randevu>

@{
	ViewData["Title"] = "RandevuListesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Randevu Listesi</h2>


<br />
<br />

<table class="table table-striped table-hover">
	<thead class="table-success">
		<tr>
			<th>Randevu Id</th>
			<th>Müsteri Adı Soyadı</th>
			<th>Müsteri Telefon</th>
			<th>Personel Adı Soyadı</th>
			<th>İşlem</th>
			<th>Randevu Tarihi</th>
			<th>Randevu Saati</th>

			<th>Onay Durumu</th>
			<th>Onayla</th>
			<th>Güncelle</th>
			<th>İptal Et</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var r in Model)
		{
			<tr>
				<td>@r.randevuID</td>
				<td>@r.MusteriName</td>
				<td>@r.tel</td>
				<td>@r.personel?.personelName</td>
				<td>@r.hizmetName</td>
				<td>@r.randevuTarih</td>
				<td>@r.randevuSaat</td>


				<td>@(r.onaylandimi ? "Onaylandı" : "Beklemede")</td>
				<td>
					@if (!r.onaylandimi)
					{

						<form method="post" action="/Admin/Randevu/Onayla">
							<input type="hidden" name="id" value="@r.randevuID" />
							<button type="submit" class="btn btn-outline-info">Onayla</button>
						</form>

					}
				</td>

				<td><a href="/Admin/Randevu/UpdateAppoint/@r.randevuID" class="btn btn-outline-secondary">Güncelle</a></td>
				<td><a href="/Admin/Randevu/DeleteAppoint/@r.randevuID" class="btn btn-outline-danger">İptal</a></td>



			</tr>
		}
	</tbody>
</table>
