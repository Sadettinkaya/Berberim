@model Berberim.Entities.Randevu

@{
    ViewData["Title"] = "UpdateAppoint";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Randevu Güncelle</h1>

<form asp-area="Admin" asp-controller="Randevu" asp-action="UpdateAppoint" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Randevu ID -->
    <input type="hidden" name="randevuID" value="@Model.randevuID" />

    <!-- Müşteri Ad Soyad -->
    <div class="mb-3">
        <label for="MusteriName" class="form-label">Müşteri Ad Soyad:</label>
        <input type="text" name="MusteriName" class="form-control" value="@Model.MusteriName" />
        <span asp-validation-for="MusteriName" class="text-danger"></span>
    </div>

    <!-- Müşteri Telefon -->
    <div class="mb-3">
        <label for="tel" class="form-label">Müşteri Telefon:</label>
        <input type="tel" name="tel" class="form-control" value="@Model.tel" />
        <span asp-validation-for="tel" class="text-danger"></span>
    </div>

    <!-- Personel Seçin -->
    <div class="mb-3">
        <label for="personelID" class="form-label">Personel Seçin:</label>
        <select name="personelID" class="form-control">
            <option value="">Personel Seçin</option>
            @foreach (var personnel in ViewBag.PersonnelList as List<Berberim.Entities.Personel>)
            {
                <option value="@personnel.personelID" @(personnel.personelID == Model.personelID ? "selected" : "")>
                    @personnel.personelName
                </option>
            }
        </select>
        <span asp-validation-for="personelID" class="text-danger"></span>
    </div>

    <!-- İşlem Seçin -->
    <div class="mb-3">
        <label for="hizmetID" class="form-label">İşlem Seçiniz:</label>
        <select name="hizmetID" class="form-control">
            <option value="">İşlem Seçin</option>
            @foreach (var hizmet in ViewBag.Services as List<Berberim.Entities.Hizmet>)
            {
                <option value="@hizmet.hizmetID" @(hizmet.hizmetID == Model.hizmetID ? "selected" : "")>
                    @hizmet.hizmetName
                </option>
            }
        </select>
        <span asp-validation-for="hizmetID" class="text-danger"></span>
    </div>

    <!-- Randevu Tarihi -->
    <div class="mb-3">
        <label for="randevuTarih" class="form-label">Randevu Tarihi:</label>
        <input type="date" name="randevuTarih" class="form-control" value="@Model.randevuTarih.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="randevuTarih" class="text-danger"></span>
    </div>

    <!-- Randevu Saati -->
    <div class="mb-3">
        <label for="randevuSaat" class="form-label">Randevu Saati:</label>
        <input type="time" name="randevuSaat" class="form-control" value="@Model.randevuSaat.ToString(@"hh\:mm")" />
        <span asp-validation-for="randevuSaat" class="text-danger"></span>
    </div>

    <!-- Notlar -->
    <div class="mb-3">
        <label for="notes" class="form-label">Notlar:</label>
        <textarea name="notes" class="form-control">@Model.notes</textarea>
        <span asp-validation-for="notes" class="text-danger"></span>
    </div>

    <!-- Güncelle Butonu -->
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
