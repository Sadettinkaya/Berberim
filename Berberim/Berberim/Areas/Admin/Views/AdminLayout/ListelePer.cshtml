@using Berberim.Entities
@model IEnumerable<Personel>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4" style="font-size: 2.5rem; color: #007bff;">Personel Listesi</h2>

<table class="table table-striped table-bordered shadow-sm" style="font-size: 1rem; background-color: #f8f9fa; border-radius: 10px;">
	<thead class="table-dark">
		<tr>
			<th>Id</th>
			<th>Adı Soyadı</th>
			<th>Uzmanlık Alanı</th>
			<th>Çalışma Saatleri</th>
			<th>Email</th>
			<th>Şifre</th>
			<th>Güncelle</th>
			<th>Sil</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var per in Model)
		{
			<tr>
				<td>@per.personelID</td>
				<td>@per.personelName</td>
				<td>@per.Uzmanliks.UzmanlikName</td>
				<td>@per.musaitSaat</td>
				<td>@per.personelEmail</td>
				<td>@per.personelPassword</td>

				<td>
					<a href="/Admin/AdminLayout/GuncellePer/@per.personelID" class="btn btn-info btn-sm" style="font-weight: bold; color: #fff;">
						Güncelle
					</a>
				</td>
				<td>
					<a href="/Admin/AdminLayout/SilPer/@per.personelID" class="btn btn-danger btn-sm" style="font-weight: bold; color: #fff;">
						Sil
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
